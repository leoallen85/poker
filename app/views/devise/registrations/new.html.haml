%h4 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.label :name
  = f.text_field :name, :autofocus => true, class: "span12"
  = f.label :email
  = f.email_field :email, class: "span12"
  = f.label :password
  = f.password_field :password, class: "span12"
  = f.label :password_confirmation
  = f.password_field :password_confirmation, class: "span12"
  .form-actions= f.submit "Sign up", class: "btn btn-success"
= render "devise/shared/links"
